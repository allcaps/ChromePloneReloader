{
  "name": "Plone Reloader",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Call /@@reload on your current Plone instance",
  "icons": {"48": "plone.png",
          "128": "plone-128.png" },
  "browser_action": {
    "default_icon": "plone.png",
    "default_popup": "control.html",
    "default_title": "Plone reloader"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
     "tabs",
     "background",
     "webRequest",
     "webRequestBlocking",
     "http://*/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
